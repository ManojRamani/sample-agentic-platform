# Example Terraform Variables for Application Layer
#
# Copy this file to terraform.tfvars and customize for your environment

# Core Configuration
environment  = "dev"
project_name = "agentic-platform"
aws_region   = "us-west-2"

# Kubernetes Configuration
kubernetes_namespace = "default"

# OTEL Collectors Configuration
otel_chart_path = "../../k8s/helm/charts/otel"

# Local Development Settings (set to true when running locally)
use_local_proxy = false

# Database Configuration
create_database_resources = true
